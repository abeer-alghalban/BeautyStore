@model BeautyStore.Models.Product

<!DOCTYPE html>
<html lang="ar" dir="rtl">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@Model.Name - تفاصيل المنتج</title>
    <link rel="stylesheet" href="~/css/Home.css" />
    <link rel="stylesheet" href="~/css/Product.css" />
    <link rel="stylesheet" href="~/css/product-details.css" />
  </head>
  <body>
    <!-- الهيدر -->
    <main class="product-details-container">
      <div class="product-details-card">
        <img src="~/@Model.ImageUrl" alt="@Model.Name" class="product-detail-img" />
        <div class="product-detail-info">
          <h1>@Model.Name</h1>
          <p class="price">السعر: @Model.Price شيكل</p>
          <div class="description">
            <h3>:وصف المنتج</h3>
            <p>@Model.Description</p>
          </div>
          <div class="actions">
              <form method="post" asp-action="AddToCart" asp-controller="Order">
                         <input type="hidden" name="productId" value="@Model.Id" />
                 <button type="submit" class="btn btn-primary">أضف إلى السلة</button>
                </form>
            <button class="back-btn" onclick="window.history.back()">العودة</button>
          </div>
        </div>
      </div>
    </main>

    <!-- الفوتر  -->

    </footer>

    <script src="~/js/script.js"></script>
    <script src="~/js/index.js"></script>
    <script src="~/js/product-details.js"></script>
  </body>
</html>
