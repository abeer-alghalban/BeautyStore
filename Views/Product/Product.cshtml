@model BeautyStore.ViewModels.ProductViewModel
<!DOCTYPE html>
<html lang="ar" dir="rtl">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>مُـنتجاتنا - مركز التجميل</title>
    <link rel="stylesheet" href="~/css/Product.css" />
  </head>
  <body>
    <!-- الهيدر -->
    <header>
      <div class="logo">Beauty Center</div>

      <nav>
        <ul id="nav-menu">
          <li><a href="@Url.Action("Index","Home")">الصفحة الرئيسية</a></li>
          <li><a href="index.html#about">من نحنُ!</a></li>
          <li><a href="@Url.Action("Index","Product")">منتجاتنا</a></li>
          <li><a href="cart.html">سلّة المشتريات</a></li>
        </ul>
      </nav>

      <div class="left-section">
       <div class="left-links">
        <a href="@Url.Action("Register","Account")">تسجيل جديد</a>
        <a href="@Url.Action("Login","Account")">تسجيل دخول</a>
      </div>

        <div class="hamburger" onclick="toggleMenu()">☰</div>
      </div>
    </header>

    <!-- محتوى الصفحة -->
    <section class="product-search">
      <h1>المُنتجات</h1>
      <div class="search-bar">
        <input type="text" placeholder="ابحث عن منتج..." id="search-input" />
        <button onclick="searchProducts()">بحث</button>
      </div>
    </section>

    <!-- قسم الفئات والمنتجات (الجديد) -->
    <main class="products-container">
      <!-- أزرار التبديل بين الفئات -->
      <div class="category-tabs">
        <button class="tab-btn active" onclick="showCategory('skin', event)">
          العناية بالبشرة
        </button>
        <button class="tab-btn" onclick="showCategory('hair', event)">
          العناية بالشعر
        </button>
      </div>

      <!-- قسم البشرة -->
      <section id="skin-section" class="product-category">
        <!-- المنتج 1 -->
      

          @foreach (var item in Model.Products)
    {
          <article class="product-item">
          <img src="@item.ImageUrl" alt="سيروم" class="product-img" />
          <div class="product-details">
            <h3 class="product-name">@item.Name</h3>
            <p class="product-price">@item.Price</p>
            <div class="product-actions">
              <button class="details-btn">عرض المزيد</button>
              <button class="add-to-cart">إضافة للسلة</button>
            </div>
          </div>
        </article>
    }


        <!-- المنتج 2 -->
       

        <!-- المنتج 3 -->
       

        <!-- المنتج 4 -->
      


      <!-- قسم الشعر -->
      <section id="hair-section" class="product-category" style="display: none">
     
          @foreach (var item in Model.Products)
    {
          <article class="product-item">
          <img src="@item.ImageUrl" alt="سيروم" class="product-img" />
          <div class="product-details">
            <h3 class="product-name">@item.Name</h3>
            <p class="product-price">@item.Price</p>
            <div class="product-actions">
              <button class="details-btn">عرض المزيد</button>
              <button class="add-to-cart">إضافة للسلة</button>
            </div>
          </div>
        </article>
    }

      </section>
    </main>

    <!-- الفوتر  -->
    <footer>
      <div class="footer-content">
        <p>تواصل معنا:</p>
        <div class="social-icons">
          <a href="https://www.facebook.com/اسم_الصفحة" target="_blank">
            <img src="~/Img/facebook.png" alt="Facebook" />
          </a>
          <a href="https://wa.me/رقم_الهاتف" target="_blank">
            <img src="~/Img/Whatsapp.png" alt="WhatsApp" />
          </a>
          <a href="https://www.instagram.com" target="_blank">
            <img src="~/Img/instagram.png" alt="Instagram" />
          </a>
        </div>
        <p>مركز التجميل. جميع الحقوق محفوظة 2025 &copy;</p>
      </div>
    </footer>
    <!-- JavaScript File -->
    <script src="~/js/script.js"></script>
  </body>
</html>

